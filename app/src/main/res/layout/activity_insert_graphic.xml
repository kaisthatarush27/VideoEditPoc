<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_relative_layout"
    android:gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/selectVideoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:text="Select Video" />

    <Button
        android:id="@+id/insertGraphicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@id/selectVideoBtn"
        android:text="insert graphic" />

    <Button
        android:id="@+id/insertPictureActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insertGraphicBtn"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@id/insertEmojiBtn"
        android:text="Insert pic act " />

    <Button
        android:id="@+id/saveVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectVideoBtn"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text="Save Graphics" />

    <Button
        android:id="@+id/insertEmojiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectVideoBtn"
        android:layout_marginStart="30dp"
        android:layout_marginTop="68dp"
        android:text="insert emoji" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/insertEmojiBtn"
        android:layout_marginTop="50dp" />

</RelativeLayout>
