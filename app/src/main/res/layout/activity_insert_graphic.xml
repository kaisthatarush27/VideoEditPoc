<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insertGraphicRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_relative_layout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/insertGifTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Insert Gif Screen"
        android:textSize="30sp" />

    <Button
        android:id="@+id/selectVideoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insertGifTv"
        android:layout_alignParentStart="true"
        android:text="Select Video" />

    <Button
        android:id="@+id/insertGraphicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insertGifTv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:text="insert graphic" />

    <Button
        android:id="@+id/insertPictureActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectVideoBtn"
        android:layout_alignParentStart="true"
        android:text="Insert pic act " />

</RelativeLayout>